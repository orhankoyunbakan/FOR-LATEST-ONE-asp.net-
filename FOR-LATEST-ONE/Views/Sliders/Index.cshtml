

@model IEnumerable<FOR_LATEST_ONE.Models.slider>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-10">
        <h2 style="color:red;">Sliderlar Tablosu</h2>
        <hr />

        <!-- Advanced Tables -->
        <div class="panel panel-default">
            <div class="panel-heading">
                Sliderlar Tablosu <a style="margin-left:30px;" class="btn btn-success" href="~/sliders/Create">Slider Ekle</a>
            </div>
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>Resim</th>
                                <th>
                                    @Html.DisplayNameFor(model => model.slider_url)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.slider_sira)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr class="gradeU">
                                    <td><img width="200" height="200" src="@Html.DisplayFor(modelItem => item.slider_url)" alt="Alternate Text" /></td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.slider_url)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.slider_sira)
                                    </td>

                                    <td style="width:100px">
                                        <a class="btn btn-success" href="~/sliders/Edit?id=@item.slider_id ">Düzenle</a>
                                        <a class="btn btn-success" href="~/sliders/Details?id=@item.slider_id ">Detay</a>
                                        <a class="btn btn-success" href="~/sliders/Delete?id=@item.slider_id ">Sil</a>

                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

            </div>
        </div>
        <!--End Advanced Tables -->
    </div>
</div>


